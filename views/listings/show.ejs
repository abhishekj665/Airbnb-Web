<% layout("/layouts/boilerplate.ejs") -%>

<div class="row">
    <div class="col-8 offset-1 mt-3">

    <h3>Listing Details</h3>
    <br>
    </div>

    <div class="card col-6 offset-1 show-card">
        <img src="<%-listing.image.url%>" class="card-img-top show-img" alt="listing_img"><br>
        <div class="card-body">
            <p class="card-text">
                <b><%= listing.title %></b>
                <br>
                <%= listing.description %><br>
                &#x20b9;<%= listing.price.toLocaleString("en-IN") %><br>
                <%= listing.location %><br>
                <%= listing.country %>
            </p>
        </div>
    </div>
    
    <div class=" offset-1 btns">
        <a href="/listings/<%=listing._id%>/edit"><button class="btn btn-dark  offset-4 edit-btn">Edit</button></a><br><br>
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class=" btn btn-dark mb-3 offset-4 delete-btn">Delete</button>
        </form>
    </div>
    
</div>

